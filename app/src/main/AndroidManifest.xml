<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ifsp.easymoney">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DevedoresActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DividasActivity"
            android:label="@string/title_activity_dividas"
            android:parentActivityName=".DevedoresActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddDevedorActivity" />
        <activity android:name=".AddDividaActivity"></activity>
    </application>

</manifest>